{
  "manifest_version": 2,
  "name": "Cookie Analyzer",
  "version": "1.0",
  "description": "Analizza i cookie del sito attivo e li classifica.",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon.png"
  }
}